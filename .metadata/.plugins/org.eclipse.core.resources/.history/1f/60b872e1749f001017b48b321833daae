                            <input type="number" class="form-control" th:value="${video.views}" id="views" name="views" placeholder="Number of Views">
                            <span th:if="${#fields.hasErrors('views')}" th:errors="*{views}" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="active" class="form-label">Active:</label>
                            <select class="form-select" name="active" id="active">
                                <option th:selected="${video.active == false}" value="false">Khóa</option>
                                <option th:selected="${video.active == true}" value="true">Hoạt động</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="categoryId" class="form-label">Category:</label>
                            <select class="form-select" id="categoryId" name="categoryId">
                                <option th:value="0" th:selected="${video.categoryId == null}">Chọn Category</option>
                                <option th:each="cat : ${categories}" th:value="${cat.categoryId}" th:selected="${video.categoryId == ${cat.categoryId}}" th:text="${cat.categoryname}"></option>
                            </select>
                            <span th:if="${#fields.hasErrors('categoryId')}" th:errors="*{categoryId}" class="text-danger"></span>
