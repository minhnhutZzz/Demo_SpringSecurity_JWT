    <div class="container mt-4">
        <h2>Chào mừng, <span th:text="${user.fullname}"></span>!</h2>
        <p>Đây là danh sách video của bạn:</p>
        
        <div th:if="${videos == null or #lists.isEmpty(videos)}" class="alert alert-info">
            Bạn chưa tạo video nào.
        </div>
        
        <div th:if="${videos != null and not #lists.isEmpty(videos)}" class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Video ID</th>
                        <th>Tiêu đề</th>
                        <th>Mô tả</th>
                        <th>Poster</th>
                        <th>Lượt xem</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    <tr th:each="video : ${videos}">
                        <td th:text="${video.videoId}"></td>
                        <td th:text="${video.title}"></td>
                        <td th:text="${video.description}"></td>
                        <td>
                            <img th:src="${video.poster}" alt="Poster" style="width: 50px; height: 30px;" th:if="${video.poster != null}">
                            <span th:text="'No image'" th:if="${video.poster == null}"></span>
                        </td>
                        <td th:text="${video.views}"></td>
                        <td th:text="${video.active ? 'Hoạt động' : 'Khóa'}"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
